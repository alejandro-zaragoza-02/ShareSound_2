@model ShareSound_2_Front.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Vacio.cshtml";
}



<div class="row">
    <div class="col-sm-1 col-md-4">
    </div>
    <div class="col-sm-10 col-md-6">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", Enctype = "multipart/form-data" }))
        {

            @Html.AntiForgeryToken()
            <img src="@Url.Content("~/Images/LogoRe.png")" height="auto" width="70%" />
            <br />
            <h4>Regístrate y podrás escuchar música gratis</h4>
            <br />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Nombre, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Descripcion, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Imagen, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Imagen, new { type = "file" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Fecha, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Fecha, new { @class = "form-control", type = "date" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default logreg" value="Registrarse" />
                </div>
            </div>
            <p>
                ¿Ya tienes una cuenta? @Html.ActionLink("Inicia sesión", "Login")
            </p>
        }
    </div>
    <div class="col-sm-1 col-md-2">
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
